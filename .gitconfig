[user]
	name = Greg Guthe
	email = greg.guthe@gmail.com
[github]
	user = g-k
[gist]
	private = no
	browse = yes
[color]
	diff = auto
	status = auto
	branch = auto
[push]
	default = current
[core]
	editor = emacsclient
	excludesfile = /home/greg/.gitignore_global
[link]
	browser = github
[rerere]
	enabled = true
[default]
	branch = current
[grep]
	lineNumber = true
[absorb]
	maxStack = 50
[alias]
	absorb = git-absorb
[init]
	defaultBranch = main
[rebase]
	autostash = true # stash/unstash WIP
	autosquash = true # auto-squash fixup commits
